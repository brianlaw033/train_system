<div class='col-xs-12'>
  <a href="/"><button class='btn btn-primary'>Back</button></a>
</div>

<div class='col-sm-6'>
  <h3>List of Trains</h3>
  <% if @trains.any?() %>
    <ul>
      <% @trains.each do |train| %>
        <li><a href="/trains/<%= train.id() %>"># <%= train.id() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h3>None</h3>
  <% end %>
</div>
<div class='col-sm-6'>
  <h3>List of Stations</h3>
  <% if @stations.any?() %>
    <ul>
      <% @stations.each do |station| %>
        <li><a href="/stations/<%= station.id() %>"><%= station.name() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h3>None</h3>
  <% end %>
</div>
